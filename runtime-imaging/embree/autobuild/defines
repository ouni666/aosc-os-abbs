PKGNAME=embree
PKGSEC=graphics
PKGDEP="tbb freeglut glu ispc"
BUILDDEP="cmake"
PKGDES="High Performance Ray Tracing Kernels"

AB_FLAGS_O3=1
ABTYPE=cmakeninja
CMAKE_AFTER=(
	-DEMBREE_ISPC_SUPPORT=ON
	-DEMBREE_TUTORIALS=OFF
)
CMAKE_AFTER__AMD64=(
	"${CMAKE_AFTER[@]}"
	-DEMBREE_MAX_ISA=AVX512SKX
)
CMAKE_AFTER__ARM64=(
	"${CMAKE_AFTER[@]}"
	-DEMBREE_MAX_ISA=NEON2X
)

NOSTATIC=0
ABSPLITDBG=0
FAIL_ARCH="!(arm64|amd64)"
