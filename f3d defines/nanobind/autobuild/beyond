install -vdm755 "$PKGDIR"/usr/include
ln -vs ../lib/python${ABPY3VER}/site-packages/nanobind/include/nanobind \
    "$PKGDIR"/usr/include/nanobind

install -vdm755 "$PKGDIR"/usr/lib/cmake
ln -vs ../../lib/python${ABPY3VER}/site-packages/nanobind/cmake \
    "$PKGDIR"/usr/lib/cmake/nanobind

