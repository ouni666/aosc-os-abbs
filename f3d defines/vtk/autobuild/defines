PKGNAME=vtk
PKGSEC=graphic
PKGDES="Software suite for manipulating and displaying scientific data"
PKGDEP="cgns double-conversion expat ffmpeg fmt freetype \
        gl2ps glew hdf5 jsoncpp lapack libarchive libglvnd libharu netcdf \
        libjpeg-turbo libogg libpng libtheora libtiff libxml2 lz4 mesa \
        openslide proj pugixml python-3 qt-6 sqlite verdict x11-lib zlib xz \
        nlohmann-json openvdb verdict"
BUILDDEP="boost eigen gdal motif tcl tk utfcpp mariadb"

# Note: -DVTK_BUILD_DOCUMENTATION=OFF, -DDOXYGEN_GENERATE_HTMLHELP=OFF
#
# The VTK reference generated by Doxygen takes 1.4GiB of space. It is too
# much and it seems that nobody actually read them. Disabling them saves
# roughly 90MiB of space after compression.
CMAKE_AFTER=(
    "-DCMAKE_INSTALL_LICENSEDIR=share/doc/$PKGNAME"
    "-DVTK_BUILD_DOCUMENTATION=OFF"
    "-DVTK_BUILD_SPHINX_DOCUMENTATION=OFF"
    "-DVTK_VERSIONED_INSTALL=OFF"
    "-DCMAKE_SKIP_RPATH=OFF"
    "-DCMAKE_SKIP_INSTALL_RPATH=ON"
    "-DVTK_GROUP_ENABLE_Imaging=YES"
    "-DVTK_GROUP_ENABLE_Qt=YES"
    "-DVTK_GROUP_ENABLE_Rendering=YES"
    "-DVTK_GROUP_ENABLE_StandAlone=YES"
    "-DVTK_GROUP_ENABLE_Views=YES"
    "-DVTK_GROUP_ENABLE_Web=YES"
    "-DVTK_WRAP_PYTHON=ON"
    "-DVTK_PYTHON_VERSION=3"
    "-DVTK_QT_VERSION=6"
    "-DVTK_USE_MPI=ON"
    "-DVTK_USE_TK=ON"
    "-DVTK_USE_EXTERNAL=ON"
    "-DVTK_MODULE_USE_EXTERNAL_VTK_fmt=OFF"
    "-DVTK_MODULE_USE_EXTERNAL_VTK_libharu=OFF"
    "-DVTK_MODULE_USE_EXTERNAL_VTK_exprtk=OFF"
    "-DVTK_MODULE_USE_EXTERNAL_VTK_ioss=OFF"
    "-DVTK_MODULE_USE_EXTERNAL_VTK_pegtl=OFF"
    "-DVTK_MODULE_USE_EXTERNAL_VTK_fast_float=OFF"
    "-DVTK_MODULE_USE_EXTERNAL_VTK_token=OFF"
    "-DVTK_MODULE_ENABLE_VTK_CommonArchive=YES"
    "-DVTK_MODULE_ENABLE_VTK_DomainsMicroscopy=YES"
    "-DVTK_MODULE_ENABLE_VTK_GeovisGDAL=YES"
    "-DVTK_MODULE_ENABLE_VTK_ImagingOpenGL2=YES"
    "-DVTK_MODULE_ENABLE_VTK_InfovisBoost=YES"
    "-DVTK_MODULE_ENABLE_VTK_InfovisBoostGraphAlgorithms=YES"
    "-DVTK_MODULE_ENABLE_VTK_IOOpenVDB=YES"
    "-DVTK_MODULE_ENABLE_VTK_IOMySQL=NO"
    "-DVTK_MODULE_USE_EXTERNAL_VTK_scn=OFF"
    "-DCMAKE_MODULE_PATH=/usr/lib/cmake/OpenVDB"
)
