PKGNAME=draco
PKGSEC=science
PKGDES="Geometry compression and decompression library"
PKGDEP="gcc-runtime glibc"

CMAKE_AFTER=(
    -DDRACO_TESTS=OFF
    -DBUILD_SHARED_LIBS=ON
    -DDRACO_TRANSCODER_SUPPORTED=ON
    -DDRACO_DECODER_ATTRIBUTE_DEDUPLICATION=ON
    -DDRACO_ANIMATION_ENCODING=ON
    -DDRACO_UNITY_PLUGIN=ON
    -DDRACO_MAYA_PLUGIN=ON
    # FIXME: CMake configurations define DRACO_SIMPLIFIER_SUPPORTED, but the relevant sources do not exist.
    -DDRACO_SIMPLIFIER_SUPPORTED=OFF
)

ABTYPE=cmakeninja
