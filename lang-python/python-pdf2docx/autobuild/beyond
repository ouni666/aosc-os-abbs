abinfo "Installing .desktop entry ..."

DESKTOP_FILE="$PKGDIR"/usr/share/applications/pdf2docx.desktop
mkdir -pv "$(dirname "$DESKTOP_FILE")"
cat > "$DESKTOP_FILE" << EOF
[Desktop Entry]
Name=pdf2docx
Exec=pdf2docx gui %F
Icon=pdf2docx
Terminal=false
Type=Application
StartupNotify=true
Categories=Office
EOF
chmod 644 "$DESKTOP_FILE"
