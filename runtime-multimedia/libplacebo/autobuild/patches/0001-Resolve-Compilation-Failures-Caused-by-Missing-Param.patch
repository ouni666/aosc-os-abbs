@@ -70,6 +70,9 @@ PL_LIBAV_API enum pl_color_system pl_system_from_av(enum AVColorSpace spc)
     // Default to PQ as it's the more common scenario.
     case AVCOL_SPC_ICTCP:               return PL_COLOR_SYSTEM_BT_2100_PQ;
     case AVCOL_SPC_NB:                  return PL_COLOR_SYSTEM_COUNT;
+    case AVCOL_SPC_IPT_C2:              return PL_COLOR_SYSTEM_UNKNOWN;
+    case AVCOL_SPC_YCGCO_RE:            return PL_COLOR_SYSTEM_UNKNOWN;
+    case AVCOL_SPC_YCGCO_RO:            return PL_COLOR_SYSTEM_UNKNOWN;
     }
 
     return PL_COLOR_SYSTEM_UNKNOWN;
