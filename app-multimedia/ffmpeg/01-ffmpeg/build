if ab_match_arch loongson2f; then
    MIPSCONF="--cpu=loongson2f"
elif ab_match_arch loongson3; then
    MIPSCONF=" \
        --cpu=loongson3 \
        --enable-msa \
        --enable-mmi \
        --disable-mipsdsp \
        --disable-mipsdspr2 \
        --disable-mipsfpu"
fi

# Note: Our 32-bit big-endian PowerPC port does not require AltiVec.
if ab_match_arch powerpc; then
    PPCCONF="--disable-altivec"
elif ab_match_arch ppc64; then
    PPCCONF="--enable-altivec"
fi

if ab_match_arch armv6hf; then
    ARMCONF=" \
        --disable-armv6t2 \
        --disable-neon"
fi

if ab_match_arch amd64; then
    VPL="--enable-libvpl"
    NVENC="--enable-nvenc"
    NVDEC="--enable-nvdec"
    CUDA="--enable-cuda-llvm"
    AMD="--enable-amf"
    VULKAN="--enable-vulkan"
elif ab_match_arch arm64; then
    NVENC="--enable-nvenc"
    NVDEC="--enable-nvdec"
    CUDA="--enable-cuda-llvm"
fi

CONFIGURE_OPTIONS=" \
    --prefix=/usr \
    --disable-debug \
    --disable-static \
    --disable-stripping \
    --enable-avisynth \
    --enable-bsfs \
    --enable-fontconfig \
    --enable-gnutls \
    --enable-gpl \
    --enable-libass \
    --enable-libbluray \
    --enable-libfreetype \
    --enable-libharfbuzz \
    --enable-libfribidi \
    --enable-libgsm \
    --enable-libmodplug \
    --enable-libmp3lame \
    --enable-libopencore_amrnb \
    --enable-libopencore_amrwb \
    --enable-libopus \
    --enable-libpulse \
    --enable-libsoxr \
    --enable-libspeex \
    --enable-libssh \
    --enable-libtheora \
    --enable-libv4l2 \
    --enable-libvorbis \
    --enable-libvpx \
    --enable-libx264 \
    --enable-libx265 \
    --enable-libxvid \
    --enable-runtime-cpudetect \
    --enable-shared \
    --enable-swresample \
    --enable-vdpau \
    --enable-version3 \
    --enable-vaapi \
    --enable-libaom \
    --enable-libsmbclient \
    --enable-libsvtav1 \
    --enable-libwebp \
    --enable-lto \
    --enable-nonfree \
    --enable-libdav1d \
    --enable-libfdk-aac \
    --enable-whisper \
    --enable-libjxl"

# Note: Minimising dependencies for Afterglow.
if ab_match_archgroup retro; then
    CONFIGURE_OPTIONS=" \
        ${CONFIGURE_OPTIONS} \
        --disable-libbluray \
        --disable-libgsm \
        --disable-libopencore_amrnb \
        --disable-libopencore_amrwb \
        --disable-libopus \
        --disable-libpulse \
        --disable-libspeex \
        --disable-libssh \
        --disable-libv4l2 \
        --disable-libvpx \
        --disable-libx265 \
        --disable-avx \
        --disable-xop \
        --disable-fma3 \
        --disable-fma4 \
        --disable-avx2 \
        --disable-avx512 \
        --disable-aesni"
fi

abinfo "Configuring FFmpeg ..."
"$SRCDIR"/configure \
    ${CONFIGURE_OPTIONS} \
    ${MIPSCONF} ${PPCCONF} ${ARMCONF} ${VPL} ${NVENC} ${NVDEC} ${CUDA}

abinfo "Building FFmpeg ..."
make

abinfo "Installing FFmpeg ..."
make install install-man \
    DESTDIR="$PKGDIR"

#--enable-libsrt
#--enable-libvmaf
#--enable-libzimg
