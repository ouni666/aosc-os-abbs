PKGNAME=aseprite
PKGSEC=video
PKGDEP="curl freetype giflib harfbuzz tinyxml2 pixman libpng libjpeg-turbo zlib tar cpio openssl"
BUILDDEP=""
PKGDES="a program to create animated sprites"

ABTYPE=cmakeninja

CMAKE_AFTER=(
    "-DLAF_BACKEND=none"
    "-DLAF_WITH_EXAMPLES=OFF"
    "-DUSE_SHARED_ZLIB:BOOL=ON"
    "-DUSE_SHARED_CURL:BOOL=ON"
    "-DUSE_SHARED_FREETYPE:BOOL=ON"
    "-DUSE_SHARED_GIFLIB:BOOL=ON"
    "-DUSE_SHARED_HARFBUZZ:BOOL=ON"
    "-DUSE_SHARED_TINYXML:BOOL=ON"
    "-DUSE_SHARED_TINYEXIF:BOOL=OFF"
    "-DUSE_SHARED_PIXMAN:BOOL=ON"
    "-DUSE_SHARED_LIBPNG:BOOL=ON"
    "-DUSE_SHARED_JPEGLIB:BOOL=ON"
)
